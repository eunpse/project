<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalDetailActivity"
    android:background="@color/cornsilk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/animal_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="500sp"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_default_animal"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/animal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="animal_name"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/animal_reg_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="animal_num"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/animal_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="animal_breed"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/animal_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="animal_age"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="나이"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/animal_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="animal_gender"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="7dp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/animal_birth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="animal_birthdate"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="생년월일"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/feature_and_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="특징"/>
            <TextView
                android:id="@+id/animal_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="features"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/inoculation_history_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_olive_green"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="접종 내역 리스트"/>
                <Button
                    android:id="@+id/schedule_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_olive_green"
                    android:layout_weight="1"
                    android:text="일정 리스트"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_gravity="fill_horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/dark_olive_green"
                app:srcCompat="@drawable/baseline_remove_24"
                app:elevation="0dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:clickable="true"
                android:backgroundTint="@color/dark_olive_green"
                app:srcCompat="@drawable/baseline_edit_24"
                app:elevation="0dp"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>